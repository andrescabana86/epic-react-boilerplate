{
  "name": "epic-react-boilerplate",
  "version": "1.0.0",
  "description": "Epic React Training with Kent C. Dodds.",
  "engines": {
    "node": "14.14.x",
    "npm": "6.14.x"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "format": "prettier --write \"**/*.+(ts|tsx|json)\"",
    "lint": "eslint src/** --fix",
    "serve": "live-server ./build",
    "start": "webpack serve --progress --color --config webpack.config.js",
    "test": "jest --detectLeaks --detectOpenHandles",
    "test:update:snapshot": "jest --updateSnapshot",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "react",
    "training",
    "typescript",
    "webpack"
  ],
  "author": "@andrescabana86",
  "license": "MIT",
  "jest": {
    "bail": true,
    "moduleNameMapper": {
      "^@components(.*)$": "<rootDir>/src/components$1",
      "^.+\\.(sass)$": "identity-obj-proxy"
    },
    "preset": "ts-jest/presets/js-with-ts",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.1",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.23",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "@webpack-cli/serve": "^1.0.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "weak-napi": "^2.0.2",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "css-loader": "^5.0.0",
    "html-webpack-plugin": "^4.5.0",
    "live-server": "^1.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sass": "^1.28.0",
    "sass-loader": "^10.0.4",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.7",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.0.3",
    "webpack": "^5.2.0"
  }
}
